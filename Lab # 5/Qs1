#include <iostream>
using namespace std;
class PetrolPump {
private:
    int pumpID;
    double litersFilled;
    static double pricePerLiter;
public:
    PetrolPump(int id, double liters) {
        pumpID = id;
        litersFilled = liters;
    }
    void printReceipt() {
        double total = litersFilled * pricePerLiter;
        cout << "Pump ID: " << pumpID << endl;
        cout << "Liters Filled: " << litersFilled << " L" << endl;
        cout << "Price per Liter: " << pricePerLiter << " PKR" << endl;
        cout << "Total Amount: " << total << " PKR" << endl;
    }
};
double PetrolPump::pricePerLiter = 270.50;
int main() {
    PetrolPump p1(101, 10.5);
    PetrolPump p2(102, 25.0);
    p1.printReceipt();
    p2.printReceipt();
    return 0;
}
