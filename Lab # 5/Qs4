#include <iostream>
using namespace std;
class CallRecord {
private:
    string callerID;
    int durationMinutes;
    static int totalCalls;
public:
    CallRecord(string id, int duration) {
        callerID = id;
        durationMinutes = duration;
        totalCalls++;
    }
    void displayCall() {
        cout << "Caller ID: " << callerID << endl;
        cout << "Duration: " << durationMinutes << " minutes" << endl;
    }
    static void getTotalCalls() {
        cout << "Total Calls Logged: " << totalCalls << endl;
    }
};
int CallRecord::totalCalls = 0;
int main() {
    CallRecord shiftCalls[3] = {
        CallRecord("0321-4567890", 5),
        CallRecord("0333-9876543", 12),
        CallRecord("0300-1122334", 8)
    };
    for (int i = 0; i < 3; i++)
        shiftCalls[i].displayCall();
    CallRecord::getTotalCalls();
    return 0;
}
